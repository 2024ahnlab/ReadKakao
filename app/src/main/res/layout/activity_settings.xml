<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/ratioText"
            android:text="모델 비율:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/ratioSeekBar"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/fraudText"
            android:text="사기 임계값:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/fraudThresholdSeekBar"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/emotionText"
            android:text="감정 임계값:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar android:id="@+id/emotionThresholdSeekBar"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
